<%= form_for @client, url: @client.new_record?? admin_company_clients_path(@company) : admin_company_client_path(@company, @client) , html: {class: 'form-horizontal'} do |f| %>

  <div class="form-group">
    <label class="col-sm-2 control-label">取引先名</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'サンカクキカク' %>
      <% if f.object.errors.include?(:name) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:name).first %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">取引先名(かな)</label>
    <div class="col-sm-10">
      <%= f.text_field :kana, class: 'form-control', placeholder: 'さんかくきかく' %>
      <% if f.object.errors.include?(:kana) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:kana).first %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">住所</label>
    <div class="col-sm-10">
      <%= f.text_field :address, class: 'form-control', placeholder: '福岡県久留米市' %>
      <% if f.object.errors.include?(:address) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:address).first %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">電話番号</label>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: 'form-control', placeholder: '0943-123-456' %>
      <% if f.object.errors.include?(:phone) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:phone).first %>
      <% end %>
    </div>
  </div>

  <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <button class="btn btn-primary" type="submit"><%= @company.new_record?? "登録する" : "更新する"%></button>
    </div>
  </div>
<% end %>
