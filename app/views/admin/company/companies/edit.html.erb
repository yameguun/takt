<div id="wrapper">
  <%= render '/admin/shared/header' %>
  <div id="page-wrapper" class="gray-bg dashbard-1">
    <%= render '/admin/shared/navbar' %>
    <div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-10">
        <h2><%= @company.name %></h2>
        <ol class="breadcrumb">
          <li>
            <a href="/admin">ダッシュボード</a>
          </li>
          <li>
            <%= link_to '会社', admin_companies_path %>
          </li>
          <li>
            <%= @company.name %>
          </li>
        </ol>
      </div>
    </div>
    <div class="wrapper wrapper-content">
      <div class="row">
        <div class="col-lg-12">
          <div class="ibox float-e-margins">
            <div class="ibox-content">
              <div class="clearfix">
                <div class="pull-right">
                  <%= link_to '削除する', admin_company_path(@company), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: '削除しますか？' } %>
                </div>
              </div>
              <%= render 'form' %>
            </div>
          </div>
        </div>
      </div>
      <%= render '/admin/shared/footer' %>
    </div>
  </div>
</div>
