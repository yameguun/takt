<%= form_for @project, url: @project.new_record?? admin_company_client_projects_path(@company, @client) : admin_company_client_project_path(@company, @client, @project) , html: {class: 'form-horizontal'} do |f| %>

  <div class="form-group">
    <label class="col-sm-2 control-label">案件名</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'ホームページ作成' %>
      <% if f.object.errors.include?(:name) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:name).first %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">案件区分</label>
    <div class="col-sm-10">
      <%= f.collection_select :project_type_id, @project_types, :id, :name, 
                               { include_blank: '選択してください' }, 
                               { class: 'form-control' } %>
      <% if f.object.errors.include?(:project_type_id) %>
        <p style="color: red;"><%= f.object.errors.full_messages_for(:project_type_id).first %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">案件詳細</label>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control', rows: 10 %>
      <% if f.object.errors.include?(:description) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:description).first %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">売上金額</label>
    <div class="col-sm-10">
      <%= f.number_field :sales, class: 'form-control' %>
      <% if f.object.errors.include?(:sales) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:sales).first %>
      <% end %>
    </div>
  </div>
  <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <button class="btn btn-primary" type="submit"><%= @project.new_record?? "登録する" : "更新する"%></button>
    </div>
  </div>
<% end %>
