<%= form_for @department, url: @department.new_record?? admin_company_departments_path(@company) : admin_company_department_path(@company,@department) , html: {class: 'form-horizontal'} do |f| %>

  <div class="form-group">
    <label class="col-sm-2 control-label">部署名</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'コーポレート' %>
      <% if f.object.errors.include?(:name) %>
      <p style="color: red;"><%= f.object.errors.full_messages_for(:name).first %>
      <% end %>
    </div>
  </div>
  <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <button class="btn btn-primary" type="submit"><%= @department.new_record?? "登録する" : "更新する"%></button>
    </div>
  </div>
<% end %>
