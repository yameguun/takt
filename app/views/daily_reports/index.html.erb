    // ドロップダウンの位置調整
    function positionDropdown(dropdown, input) {
        const windowHeight = $(window).height();
        const scrollTop = $(window).scrollTop();
        const inputOffset = input.offset();
        const inputHeight = input.outerHeight();
        const inputBottom = inputOffset.top + inputHeight - scrollTop;
        const dropdownHeight = Math.min(250, dropdown.get(0).scrollHeight || 250);
        const spaceBelow = windowHeight - inputBottom;
        const spaceAbove = inputOffset.top - scrollTop;

        // 画面下部での上方向表示判定
        if (spaceBelow < dropdownHeight + 20 && spaceAbove > dropdownHeight + 20) {
            dropdown.addClass('show-above');
        } else {
            dropdown.removeClass('show-above');
        }

        // モバイル・作業区分での右寄せ判定
        const isMobile = $(window).width() <= 768;
        const isTaskType = input.hasClass('task-type-input');
        const isRightColumn = input.closest('.col-md-4').index() === 2;
        
        if (isMobile || (isTaskType && isRightColumn)) {
            dropdown.addClass('align-right');
        } else {
            dropdown.removeClass('align-right');
        }
    }

    // サジェスト選択処理
    function selectSuggestion(suggestionItem, input, type) {
        const id = suggestionItem.data('id');
        const name = suggestionItem.data('name');
        
        input.val(name);
        
        if (type === 'client') {
            input.closest('.form-group').find('.client-id').val(id);
            const workItem = input.closest('.work-item-card');
            const projectInput = workItem.find('.project-input');
            const projectIdInput = workItem.find('.project-id');
            projectInput.prop('disabled', false).val('').focus();
            projectIdInput.val('');
            loadProjectSuggestions(workItem, id);
        } else if (type === 'project') {
            input.closest('.form-group').find('.project-id').val(id);
        } else if (type === 'task-type') {
            input.closest('.form-group').find('.task-type-id').val(id);
        }
        
        currentDropdown.hide();
        currentDropdown = null;
        currentSelectedIndex = -1;
    }

    // ===== キーボードナビゲーション =====
    $(document).on('keydown', '.client-input, .project-input, .task-type-input', function(e) {
        if (!currentDropdown || !currentDropdown.is(':visible')) return;

        const items = currentDropdown.find('.suggestion-item:not(.text-muted)');
        const itemCount = items.length;

        if (itemCount === 0) return;

        switch(e.keyCode) {
            case 38: // 上矢印
                e.preventDefault();
                currentSelectedIndex = currentSelectedIndex <= 0 ? itemCount - 1 : currentSelectedIndex - 1;
                updateSelection(items);
                break;
                
            case 40: // 下矢印
                e.preventDefault();
                currentSelectedIndex = currentSelectedIndex >= itemCount - 1 ? 0 : currentSelectedIndex + 1;
                updateSelection(items);
                break;
                
            case 13: // Enter
                e.preventDefault();
                if (currentSelectedIndex >= 0 && currentSelectedIndex < itemCount) {
                    const selectedItem = items.eq(currentSelectedIndex);
                    const inputType = $(this).hasClass('client-input') ? 'client' : 
                                    $(this).hasClass('project-input') ? 'project' : 'task-type';
                    selectSuggestion(selectedItem, $(this), inputType);
                }
                break;
                
            case 27: // Escape
                e.preventDefault();
                currentDropdown.hide();
                currentDropdown = null;
                currentSelectedIndex = -1;
                break;
        }
    });

    // 選択状態の更新
    function updateSelection(items) {
        items.removeClass('highlighted active');
        if (currentSelectedIndex >= 0) {
            const selectedItem = items.eq(currentSelectedIndex);
            selectedItem.addClass('highlighted active');
            
            // 選択項目がビューに入るようにスクロール
            const dropdown = currentDropdown;
            const itemTop = selectedItem.position().top;
            const itemHeight = selectedItem.outerHeight();
            const dropdownHeight = dropdown.height();
            const scrollTop = dropdown.scrollTop();

            if (itemTop < 0) {
                dropdown.scrollTop(scrollTop + itemTop);
            } else if (itemTop + itemHeight > dropdownHeight) {
                dropdown.scrollTop(scrollTop + itemTop + itemHeight - dropdownHeight);
            }
        }
    }

