            const div = $('<div class="suggestion-item"></div>')
                .html(`<i class="fa ${icon} m-r-xs"></i> ${item.name}`)
                .data('id', item.id)
                .data('name', item.name)
                .data('index', index);
            
            div.click(function() {
                selectSuggestion($(this), input, type);
            });

            // タッチデバイス対応
            div.on('touchend', function(e) {
                e.preventDefault();
